@model IEnumerable<Locadora.WebMVC.Models.FilmeViewModel>

    @{
        ViewData["Title"] = "Home Page";
    }

    <div class="text-center">
        <h1 class="display-4">WebLocadora de Filmes</h1>
    </div>

    <p>
        <a asp-action="Create">Novo Filme</a>
    </p>

    <table class="table" id="tbFilmes">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Observação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Obsercacao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>

            }
        </tbody>
    </table>
