@model IEnumerable<Locadora.WebMVC.Models.FilmeViewModel>

    @{
        ViewData["Title"] = "Home Page";
    }

    <div class="text-center">
        <h1 class="display-4">WebLocadora de Filmes</h1>
    </div>

    <p>
        <a class="btn btn-primary" asp-action="Create">Cadastrar Novo Filme</a>
    </p>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Pesquisar pelo Nome: <input type="text" name="searching" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-success" /> |
                <a asp-action="Index">Carregar Todos</a>
            </p>
        </div>
    </form>

    <table class="table" id="tbFilmes">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Observação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Obsercacao)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="glyphicon glyphicon-pencil"></i>
                            Editar
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="glyphicon glyphicon-trash"></i>Deletar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
