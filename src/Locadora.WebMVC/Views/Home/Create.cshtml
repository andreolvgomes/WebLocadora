@model Locadora.WebMVC.Models.FilmeViewModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novo Filme</h1>

@{
    if (TempData["Erros"] is IEnumerable<string> mensagensErro && mensagensErro.Any())
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <ul>
                @{
                    foreach (var erro in mensagensErro)
                    {
                        <li>@erro</li>
                    }
                }

            </ul>
        </div>
    }
}

<form asp-action="Create" asp-controller="Home">
    <div class="modal-body">

        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Obsercacao"></label>
            <input asp-for="Obsercacao" class="form-control" />
        </div>

        <div class="modal-footer">
            <div>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
