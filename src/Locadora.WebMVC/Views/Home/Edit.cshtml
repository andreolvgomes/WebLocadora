@model Locadora.WebMVC.Models.FilmeViewModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Filme</h1>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h3 id="msgRetorno" style="padding-top: 20px">Opa! Algo deu errado :(</h3>
        <div style="padding-top: 20px" asp-validation-summary="All" class="text-danger"></div>
    </div>
}
@{
    if (TempData["Erros"] is IEnumerable<string> mensagensErro && mensagensErro.Any())
    {
        <div style="padding-top: 15px;"></div>

        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3 id="msgRetorno" style="padding-top: 20px">Opa! Algo deu errado :(</h3>

            <ul>
                @{
                    foreach (var erro in mensagensErro)
                    {
                        <li>@erro</li>
                    }
                }

            </ul>
        </div>
    }
}

<form asp-action="Edit" asp-controller="Home">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Obsercacao"></label>
            <input asp-for="Obsercacao" class="form-control" />
        </div>

        <div class="modal-footer">
            <div>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
